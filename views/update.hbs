    width: 100vw;
    top: 0;
    height: 10vh;
    z-index: 200;
    box-shadow: 0 1px 10px grey;

  }
  nav i{
    font-size: 2.5vmax;
    margin: 0 1vmax;
  }
  .ri-home-4-fill{
    padding-bottom: 5px;
    border-bottom: 2px solid royalblue;
    color:royalblue;
  }
  </style>
   <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
